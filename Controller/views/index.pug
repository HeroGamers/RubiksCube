    script(defer src="js/socket.js")
    //script(defer src="/js/clickButtons.js")
    script(src="https://threejs.org/build/three.min.js")
    script(defer src="/js/newCube.js")
    script(defer src="js/cubeScanner.js")
    script(defer src="js/borderColors.js")
    script(defer src="/js/controllerHandler.js")
    script(defer src="/js/debug.js")
    script(defer src="js/themehandler.js")
    //script(defer src="/js/bookmarker.js")

    title Rubik's Cube Controller

    body.text-center
      div.container
        h1.p-5.noselect Rubik's Cube Controller

        div.controller
          div.step.row.mb-1
            div.col-md-12
              h2.noselect
              h5.noselect
          div.controllercontent.row.mb-4
            // controllerHandler will put content here depending on the current step
          div.buttons.row.mb-1
            div.col-md-12
              // buttons from the controllerHandler will go here
          div.text-information.row
            div.col-md-12
              p.statusmessage(style="display: none")
        div.debug

        footer.noselect.pt-2
            p #[a.modeSwitch] | #[a.themeSwitch]
        //  div.bookmark(style="display: block")

        script(defer src="/js/oldCube.js")
